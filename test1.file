package main

import "fmt"

func main() {
	var Omeal float32
	var tip float32
	var tax float32
	var totalCost int
	fmt.Println("enter the mealcost")
	fmt.Scanln(&Omeal)

	fmt.Println("enter the tip")
	fmt.Scanln(&tip)
	tip = float32(Omeal * 0.2)
	fmt.Println("percentage of meal after added the tip", tip)
	fmt.Println("enter the tax")
	fmt.Scanln(&tax)
	tax = float32(Omeal * 0.08)
	fmt.Println("percentage of Meal cost after tax", tax)
	totalCost = int(Omeal + tip + tax)
	fmt.Println("total cost", totalCost)

}
